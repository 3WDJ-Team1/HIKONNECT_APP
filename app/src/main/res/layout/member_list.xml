<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginTop="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        >

        <RelativeLayout
            android:id="@+id/cardWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profilePic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_group_white_24px"
                android:tint="@color/grey_700"
                android:layout_marginStart="8dp"/>

            <TextView
                android:id="@+id/memberName"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="memberName"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btnAcceptUser"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="受諾"
                android:textColor="@color/white"
                android:backgroundTint="@color/cyan_500"
                android:layout_toStartOf="@+id/btnRejectUser"/>

            <Button
                android:id="@+id/btnRejectUser"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="拒絶"
                android:textColor="@color/white"
                android:backgroundTint="@color/red_300"
                android:layout_alignParentEnd="true"/>

            <LinearLayout
                android:id="@+id/detailWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="2dp"
                android:padding="2dp"
                android:layout_below="@+id/memberName"
                android:layout_centerHorizontal="true"
                android:background="@color/grey_200"
                android:visibility="gone">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvMemberInfoDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/member_info_detail_item">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>