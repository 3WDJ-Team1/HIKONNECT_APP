<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:text="등산 완료!"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="2"/>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="남은 인원"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_marginBottom="8dp">
            <!--TODO 이곳에 사람 몇 명인지 넣습니다-->
            <TextView
                android:id="@+id/howManyNowHiking"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="40sp"
                android:textColor="@color/red_600"
                android:text="24"
                android:gravity="center|end"
                android:textStyle="bold"
                android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center|start"
                android:text="명"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!--TODO 여기에 사람 이름이 들어가야 합니다-->
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="최준규"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="의 등산 기록"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/afterHikingList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_weight="8"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        tools:listitem="@layout/after_hiking_list_item" />

    <Button
        android:id="@+id/showMemberList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="현재 등산 중인 멤버 보기"
        android:textColor="@color/white"
        android:backgroundTint="@color/cyan_500"
        android:layout_weight="1"
        />
</LinearLayout>