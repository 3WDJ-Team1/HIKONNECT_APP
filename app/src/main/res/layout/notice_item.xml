<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:padding="8dp"
    >
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:id="@+id/noticeNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="00"
                android:textColor="@color/cyan_500"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/noticeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="title"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/noticeWriter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="writer"
                android:layout_gravity="center|bottom"
                android:textColor="@color/grey_900"
                android:layout_below="@+id/noticeTitle"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/noticeHits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:layout_gravity="center_vertical|end"
                android:textSize="18dp"
                android:textColor="@color/grey_500"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/groupNoticeImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/groupNoticeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="content\ncontent\ncontent!!!!"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:background="@color/grey_200"
            android:textColor="@color/grey_800"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
</FrameLayout>