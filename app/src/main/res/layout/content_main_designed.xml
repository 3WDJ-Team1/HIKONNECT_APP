<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/main_logo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/hikonnect_logo_black" />

        <android.support.v7.widget.CardView
            android:id="@+id/mainCard"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/main_logo"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:elevation="0dp"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:id="@+id/nowScheduleLoading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Loading Schedule"
                    android:textColor="@color/cyan_600"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/nowScheduleEmptyLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="계획된 일정이 없습니다"
                    android:textAlignment="center"
                    android:textColor="@color/grey_800"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/nowScheduleSearchGroup"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_search_group_selector"
                    android:drawableTint="@color/light_green_500"
                    android:drawableTop="@drawable/ic_search_svgrepo_com"
                    android:padding="8dp"
                    android:text="Search\nSchedule"
                    android:textColor="@color/light_green_500"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/nowScheduleViewPagerWrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <Button
                    android:id="@+id/nowSchedulePrevBtn"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="#0000"
                    android:text="&lt;"
                    android:textColor="@color/grey_400"
                    android:textSize="20sp" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/nowScheduleViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/nowScheduleNextBtn"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="#0000"
                    android:text="&gt;"
                    android:textColor="@color/grey_400"
                    android:textSize="20sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainCard"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnToGroupMenu"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/main_groupmenu_btn_selector"
                android:drawableTint="@color/amber_500"
                android:drawableTop="@drawable/group_menu_xl"
                android:padding="8dp"
                android:text="Group\nMenu"
                android:textColor="@color/amber_500"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnToMyMenu"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/main_mymenu_btn_selector"
                android:drawableTint="@color/cyan_500"
                android:drawableTop="@drawable/my_menu_xl"
                android:paddingTop="24dp"
                android:text="My\nMenu"
                android:textColor="@color/cyan_500"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>