<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/joinedGroupLayout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="2dp">

        <Button
            android:id="@+id/btnExitGroup"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:drawableStart="@drawable/ic_cancel_svg"
            android:backgroundTint="@color/red_400"
            android:layout_gravity="top|end"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/groupTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="group name"
                android:textColor="@color/brown_900"
                android:textSize="20dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/groupWriter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="writer"
                android:textSize="12sp"
                android:layout_below="@+id/groupTitle"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/groupWriter"
                android:background="@color/blue_gray_50">

                <TextView
                    android:id="@+id/groupDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textColor="@color/grey_900"
                    android:text="description"/>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>