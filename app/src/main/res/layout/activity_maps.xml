<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="kr.ac.yjc.wdj.myapplication.MapsActivity" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/showRecordList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginTop="100dp"
            android:text="녹음 보기" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#33000000"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고도"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/altitude_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="1234"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현재 속도"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/avg_speed_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="1234"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="순위"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/rank_txtview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="1234"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/imagelayout"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_gravity="center_vertical|center"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical|center"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="invisible">

                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="제목 입력"
                    android:textColorHint="@color/grey_500" />

                <ImageView
                    android:id="@+id/l_memo_img"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitCenter" />

                <EditText
                    android:id="@+id/l_memo_contnets_edttxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="내용"
                    android:textColorHint="@color/grey_500" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/loc_memo_store_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/cyan_500"
                        android:text="전송" />

                    <Button
                        android:id="@+id/l_memo_cancel_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="취소" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/change_h_status_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="130dp"
                android:backgroundTint="@color/cyan_600"
                android:text="등산시작"
                android:visibility="invisible" />
        </LinearLayout>

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/write_l_memo_fabmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="210dp"
            fab:menu_colorNormal="@color/colorPrimary"
            fab:menu_colorPressed="@color/colorPrimary"
            fab:menu_colorRipple="@color/colorPrimary"
            fab:menu_fab_size="normal"
            fab:menu_icon="@drawable/ic_bookmark_black_36dp">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/l_memo_with_pic_fabbtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add_a_photo_black_36dp"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_colorPressed="@color/colorPrimary"
                fab:fab_colorRipple="@color/colorPrimary"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/l_memo_without_pic_fabbtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_create_black_36dp"
                fab:fab_colorNormal="@color/colorPrimary"
                fab:fab_colorPressed="@color/colorPrimary"
                fab:fab_colorRipple="@color/colorPrimary"
                fab:fab_size="mini" />
        </com.github.clans.fab.FloatingActionMenu>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/update_loc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="140dp"
            android:src="@drawable/ic_gps_fixed_black_36dp"
            fab:fab_colorNormal="@color/colorPrimary"
            fab:fab_colorPressed="@color/colorPrimary"
            fab:fab_colorRipple="@color/colorPrimary"
            fab:menu_fab_size="normal" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/show_member_list_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="70dp"
            android:src="@drawable/ic_people_black_36dp"
            fab:fab_colorNormal="@color/colorPrimary"
            fab:fab_colorPressed="@color/colorPrimary"
            fab:fab_colorRipple="@color/colorPrimary"
            fab:menu_fab_size="normal" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/show_my_info_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_person_black_36dp"
            fab:fab_colorNormal="@color/colorPrimary"
            fab:fab_colorPressed="@color/colorPrimary"
            fab:fab_colorRipple="@color/colorPrimary"
            fab:menu_fab_size="normal" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/sendRecordData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="16dp"
            android:src="@android:drawable/ic_btn_speak_now"
            fab:fab_colorNormal="@color/red_500"
            fab:fab_colorPressed="@color/grey_300"
            fab:fab_colorRipple="@color/white"
            fab:menu_fab_size="normal" />
    </FrameLayout>


</RelativeLayout>