<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/groupMenuTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Group Menu"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/grey_800"
            android:layout_marginTop="80dp"/>

        <Button
            android:id="@+id/btnToMakeGroup"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableStart="@drawable/ic_create_group"
            android:textAlignment="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="24dp"
            android:drawableTint="@color/teal_accent_400"
            android:drawablePadding="8dp"
            android:text="그룹 만들기"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/teal_accent_400"
            android:background="@drawable/my_profile_btn_selector"
            android:layout_below="@+id/groupMenuTitle"
            android:layout_marginTop="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnToGroupList"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:drawableEnd="@drawable/my_menu_btn_mygroups"
            android:textAlignment="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingEnd="24dp"
            android:drawableTint="@color/red_300"
            android:drawablePadding="8dp"
            android:text="모집 중인 그룹"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/red_300"
            android:background="@drawable/my_groups_btn_selector"
            android:layout_below="@+id/btnToMakeGroup"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>