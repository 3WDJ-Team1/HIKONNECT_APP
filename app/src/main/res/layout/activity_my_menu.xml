<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp">

    <RelativeLayout
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/my_menu_background">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/userProfilePic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_android_person_svg"
            />

        <TextView
            android:id="@+id/userNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nickname"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_below="@+id/userProfilePic"
            android:textColor="@color/black"
            android:textStyle="bold|italic"
            />

        <TextView
            android:id="@+id/userId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="userid"
            android:layout_below="@+id/userNickname"
            android:textAlignment="center"
            android:textColor="@color/grey_800"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topPanel">

        <Button
            android:id="@+id/btnToProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/my_menu_btn_mypage"
            android:paddingStart="24dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textAlignment="center"
            android:drawableTint="@color/teal_accent_400"
            android:drawablePadding="8dp"
            android:text="profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/teal_accent_400"
            android:background="@drawable/my_profile_btn_selector"
            android:layout_above="@+id/btnToRecord"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnToRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/my_menu_btn_myrecord"
            android:textAlignment="center"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingEnd="24dp"
            android:drawableTint="@color/amber_500"
            android:drawablePadding="8dp"
            android:text="record"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/amber_500"
            android:background="@drawable/my_record_btn_selector"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/btnToMyGroups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/my_menu_btn_mygroups"
            android:textAlignment="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="24dp"
            android:drawableTint="@color/red_300"
            android:drawablePadding="8dp"
            android:text="my groups"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/red_300"
            android:background="@drawable/my_groups_btn_selector"
            android:layout_below="@+id/btnToRecord"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

    </RelativeLayout>

</RelativeLayout>